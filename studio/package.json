    "typegen": "sanity typegen generate",
    "update-types": "npm run extract-schema && npm run typegen"
  },
  "keywords": [
    "sanity"
  ],
  "dependencies": {
    "@sanity/client": "^6.28.4",
    "@sanity/icons": "^3.7.0",
    "@sanity/ui": "^2.15.2",
    "@sanity/vision": "^4.10.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sanity": "^4.10.1",
    "sanity-plugin-documents-pane": "latest",
    "sanity-plugin-draft-review-v3": "^0.1.0",
    "sanity-plugin-groq-snippet": "^1.1.0",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@sanity/eslint-config-studio": "^5.0.1",
    "@types/react": "^18.0.25",
    "eslint": "^9.9.0",
    "prettier": "^3.0.2",
    "typescript": "^5.1.6"
  },
  "prettier": {
    "semi": true,
    "printWidth": 80,
    "bracketSpacing": true,
    "singleQuote": true,
